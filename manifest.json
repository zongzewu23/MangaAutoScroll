{
  "manifest_version": 3,
  "name": "Manga Auto Scroll",
  "version": "1.0",
  "description": "Manga Auto Scroll is a simple extension that allows you to automatically scroll manga pages for a smoother reading experience. You can control the scrolling speed with keyboard shortcuts or adjust it in the extension popup.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/WuIcon.png",
      "48": "icons/WuIcon.png",
      "128": "icons/WuIcon.png"
    },
  "homepage_url": "https://zongzewu23.github.io/MangaAutoScroll/",
  "privacy_policy_url": "https://zongzewu23.github.io/MangaAutoScroll/privacy_policy.html"

  },
  "web_accessible_resources": [
    {
      "resources": ["icons/WuIcon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
